void f(int i)
{
    cout << endl;
    cout << i << ". feladat:" << endl;
}

bool eric(string s)
{
    return s.substr(0,12)=="Eric Clapton";
}
int hossz(t_adat x)
{
    return x.p*60+x.mp;
}
