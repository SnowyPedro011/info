            x1.push_back(tmp);
        else if (tmp.ado==2)
            x2.push_back(tmp);
        else if (tmp.ado==3)
            x3.push_back(tmp);
    }
    ifile.close();
    /// 2. feladat
    cout <<   "1. csatorna " << x1.size()<< "   2. csatorna " << x2.size() << "   3. csatorna "<< x3.size() << endl;


    /// 3. feladat
