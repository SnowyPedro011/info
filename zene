#include <iostream>
#include <fstream>
#include <vector>
#include <string>
using namespace std;

typedef struct
{
    int ado, p, mp;
    string azon;
} t_adat;
void f(int i);
bool eric(string s);
int hossz(t_adat x);
int main()
