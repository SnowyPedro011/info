    //  for (i=0; i<n; ++i)

    ///3. feladat b.
    int e,u,ido;
    i=0;
    while (i<x1.size() && !eric(x1[i].azon))
        ++i;
    if (i<x1.size())
    {
        e=i;
        i=x1.size()-1;
